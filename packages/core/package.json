{
  "name": "@tarodan/core",
  "version": "1.0.0",
  "description": "Core business logic for Tarodan",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zustand": "^4.4.7",
    "@tarodan/types": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "react": "^18.2.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
