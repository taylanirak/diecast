{
  "name": "tarodan",
  "version": "1.0.0",
  "private": true,
  "description": "Tarodan - İkinci El Eşya Alım Satım ve Takas Platformu",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "pnpm --filter @tarodan/api prisma migrate dev",
    "db:push": "pnpm --filter @tarodan/api prisma db push",
    "db:seed": "pnpm --filter @tarodan/api prisma db seed",
    "db:studio": "pnpm --filter @tarodan/api prisma studio",
    "seed:admin": "ts-node -r tsconfig-paths/register scripts/seed-admin.ts",
    "docker:up": "docker-compose -f infrastructure/docker-compose.yml up -d",
    "docker:down": "docker-compose -f infrastructure/docker-compose.yml down",
    "docker:prod": "docker-compose -f infrastructure/docker-compose.prod.yml up -d",
    "postinstall": "echo Skipping husky"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.2"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
